/*
/ flex system
*/

// ******************** //
// variables
// ******************** //
flexArray = 1..12
divider = 100/12
horizontalPos = {
	left: flex-start,
	center: center,
	right: flex-end,
	evenly: space-evenly,
	between: space-between,
	around: space-around
}
verticalPos = {
	top: flex-start,
	middle: center,
	bottom: flex-end
}

.flex
	display flex
	flex-wrap wrap

	&.flex--unwrap {
		flex-wrap unset
	}



	// ******************** //
	// columns
	// ******************** //

	for num in flexArray
		.col-{num}
			flex-basis (divider*num)%
			max-width (divider*num)%

		.offset-{num - 1}
			margin-left (divider * (num - 1))%

	for breakpoint in breakpoints
		+breakpoint-up(breakpoint)
			.col-{breakpoint}
				flex-basis 0
				flex-grow 1
				max-width 100%

			for num in flexArray
				.col-{breakpoint}-{num}
					flex-basis (divider*num)%
					max-width (divider*num)%

				.offset-{breakpoint}-{num - 1}
					margin-left (divider * (num - 1))%



	// ******************** //
	// justify
	// ******************** //

	for prop, val in horizontalPos
		&.{prop}
			justify-content val

	for prop, val in verticalPos
		&.ver-{prop}
			align-items val

	breakpoints = 'lg', 'md', 'sm'
	@import 'mixins/breakpoints'
	for breakpoint in breakpoints
		+breakpoint-down(breakpoint)
			for prop, val in horizontalPos
				&.{prop}-{breakpoint}
					justify-content val

			for prop, val in verticalPos
				&.ver-{prop}-{breakpoint}
					align-items val
